{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "js",
    },
    "include": [
        "src/**/*"
    ]
}